@model IEnumerable<E_biblioteka.Models.Book>
@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    body {
        background-image: url("https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80");
        background-size: cover;
    }
</style>

<div class="container-fluid" style="display: inline">
    <div class="row">
        <div class="col-lg-4">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="display: inline-block; align-content: center; width: 100%; margin-top: 40px; margin-right: 400px;">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner text-center" style="margin: auto;">
                    <div class="item active" role="listbox">
                        <a href="/Books/Details/@Model.First().BookId?page=1">
                            <img src="@Model.First().ImageUrl" alt="@Model.First().Name" class="img-responsive img-thumbnail center-block" style="margin: auto; width: 100%; height: 550px;" />
                        </a>
                    </div>
                    @foreach (var item in Model.Skip(1))
                    {
                        <div class="item">
                            <a href="/Books/Details/@item.BookId">
                                <img src="@item.ImageUrl" alt="@item.Name" class="img-responsive img-thumbnail center-block" style="margin: auto; width: 100%; height: 550px;" />
                            </a>
                        </div>
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-6" style="margin-top: 160px; background-color: wheat; opacity: 0.8; padding-bottom: 20px; border-radius: 40px; margin-left: 150px">
            <div class="text-center" style="border-radius: 25px;">
                <h1 style="font-size: 140px; color: darkred;">E-library</h1>
                <h3 style="font-weight: bold; font-style: italic;">
                    “So many books, yet so little time...”
                </h3>
                <a href="@Url.Action("Index", "Books")" class="btn btn-primary btn-lg" style="margin-top: 20px;">Find something to read <i class="fa fa-angle-double-right"></i></a>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript" src="@Href("~/Scripts/bootstrap.js")"></script>
}
