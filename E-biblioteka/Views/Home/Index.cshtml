@model IEnumerable<E_biblioteka.Models.Book>
@{
    ViewBag.Title = "Home Page";
}

    <div style="display: inline">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="display: inline-block; align-content: center; width: 40%; margin-top: 40px; margin-right: 400px;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner text-center" style="margin: auto; width: 350px">
                <div class="item active" role="listbox">
                    <a href="/Books/Details/@Model.First().BookId">
                        <img src="@Model.First().ImageUrl" alt="@Model.First().Name" class="img-responsive img-thumbnail center-block" style="margin: auto; width: 100%; height: 600px;" />
                    </a>
                </div>
                @foreach (var item in Model.Skip(1))
                {
                    <div class="item">
                        <a href="/Books/Details/@item.BookId">
                            <img src="@item.ImageUrl" alt="@item.Name" class="img-responsive img-thumbnail center-block" style="margin: auto; width: 100%; height: 600px;" />
                        </a>
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="text-center" style="float: right; display: inline-block; margin-top: 100px; margin-left: -40px; margin-right: 250px">
            <h1 style="margin-top: -600px; margin-right: -100px;">Welcome to our library</h1>
            <p>
                blablablablal sredi go ovoj tekst
            </p>
        </div>
    </div>

@section scripts {
    <script type="text/javascript" src="@Href("~/Scripts/bootstrap.js")"></script>
}
