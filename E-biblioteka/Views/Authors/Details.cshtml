@model E_biblioteka.Models.Author

@{
    ViewBag.Title = "Details";
}
<style>
    #floated {
        float: left;
    }

    #non {
        float: none;
        text-align: center;
    }

    #con {
        background-color: white;
        border: 1px solid black;
        margin-top: 20px;
        width: 1000px;
        max-height: 500px;
    }

    body {
        background-color: lightgray;
    }
</style>
<body>
    <div class="container" id="con">
        <div class="row">
            <header id="header" class="clear" style="margin-bottom:30px;">
                <div id="upper-logo">
                    <h1 class="logo" data-content-field="site-title" style="margin-left:20px">
                        @Html.DisplayFor(model => model.Name)
                    </h1>
                </div>
            </header>
            <div id="container" style="margin-bottom:20px;">
                <div id="floated" class="float float-left" style="margin-right:20px; padding-right:20px; margin-left:20px;">
                    <img id="modalImage" style="width: 200px; height: 250px;" src="@Model.ImageUrl" alt="@Model.Name  "/>

                </div>
                <div id="non" style="margin-left:40px; padding-left:20px; padding-top:20px; margin-bottom:40px; margin-right:60px; text-align:left" class="text-right">
                    @Model.Description
                </div>
            </div>
        </div>

        <div class="row" style="margin-bottom:30px;">
            <div class="col-lg-3">
                @if (Model.Books.Count != 0)
                {
                    <h3>
                        <b>@Html.DisplayNameFor(model => model.Books)</b>
                    </h3>
                    <ul>
                        @for (int i = 0; i < Model.Books.Count; i++)
                        {
                            <li>
                                @Html.ActionLink(Model.Books[i].Name, "Details", "Books", new { id = Model.Books[i].BookId }, new { })
                            </li>
                        }
                    </ul>

                }
            </div>
        </div>
    </div>
</body>

<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- The Close Button -->
    <span class="close">&times;</span>

    <!-- Modal Content (The Image) -->
    <img class="modal-content" id="img01">

    <!-- Modal Caption (Image Text) -->
    <div id="caption"></div>
</div>

@section styles {
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/ModalImage.css")" />
}

@section scripts {
    <script type="text/javascript" src="@Href("~/Scripts/ModalImage.js")"></script>
}
