@model E_biblioteka.Models.Book

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        background-color: lightgray;
    }

    #contentHead {
        background-color: white;
        border: 1px solid black;
        margin-top: 20px;
        width: 1000px;
        height: 500px;
        margin-left: 80px;
    }
</style>
<div class="container">
    <div id="contentHead">
        <h1 style="margin-left: 20px; margin-top: 30px;">@Model.Name</h1>
        <p style="margin:20px; margin-left: 30px;">By @Html.ActionLink(Model.Author.Name, "Details", "Authors", new { id = Model.Author.AuthorId }, new { })</p>
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-3">
                <img id="modalImage" style="width: 200px; height: 280px; margin-left: 30px;" src="@Model.ImageUrl" alt="@Model.Name" />
                <div class="text-center" style="margin-top: 20px; margin-left: 30px;">
                    @if (User.IsInRole("Member") || User.IsInRole("Moderator"))
                    {
                        if (Model.InStock > 0)
                        {
                            <a href="@Url.Action("Order", "Books", new { id = Model.BookId })" class="btn btn-warning" style="margin-right: 5px;">
                                <span><i class="fa fa-shopping-cart"></i> Order</span>
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-warning disabled">
                                <span><i class="fa fa-shopping-cart"></i> Order</span>
                            </button>
                        }
                    }
                    @if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
                    {
                        <a href="@Url.Action("Edit", "Books", new { id = Model.BookId })" class="btn btn-primary" style="margin-right: 5px;">Edit</a>
                    }
                    <a href="@Url.Action("Index", "Books")" class="btn btn-default">Back to list</a>
                </div>
            </div>
            <div class="col-lg-8">
                <p class="text-left">Genre: @Model.Genre</p>
                <p class="text-left">Year: @Model.Year</p>
                <p class="text-left">@Model.Description</p>
            </div>
        </div>
    </div>
</div>


<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- The Close Button -->
    <span class="close">&times;</span>

    <!-- Modal Content (The Image) -->
    <img class="modal-content" id="img01">

    <!-- Modal Caption (Image Text) -->
    <div id="caption"></div>
</div>

@section styles {
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/ModalImage.css")" />
}

@section scripts {
    <script type="text/javascript" src="@Href("~/Scripts/ModalImage.js")"></script>
}

