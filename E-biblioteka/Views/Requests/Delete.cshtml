@model E_biblioteka.Models.Request

@{
    ViewBag.Title = "Delete";
}

<h2>Delete request</h2>
<div>
    <div class="container-fluid" style="margin-top: 40px; margin-bottom: 20px;">
        <h4 style="margin-left: 30px;">Are you sure you want to delete this request?</h4>
        <div class="row">
            <hr />
            <div class="col-lg-2" style="width: 10%;">
                <p style="font-weight: bold;">Book title</p>
                <p style="font-weight: bold;">Book author</p>
                <p style="font-weight: bold;">Comment</p>
            </div>
            <div class="col-lg-4" style="width: 40%;">
                <p>@Model.Title</p>
                <p>@Model.AuthorsName</p>
                <p style="width: 500px; word-wrap: break-word;">@Model.Comment</p>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" style="margin-right: 5px;" />
            <a href="@Url.Action("Index", "Requests")" class="btn btn-default">Back to list</a>
        </div>
    }
</div>
